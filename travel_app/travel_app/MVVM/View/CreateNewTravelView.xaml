<Window x:Class="travel_app.MVVM.View.CreateNewTravelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:travel_app.MVVM.View"
        mc:Ignorable="d"
        Title="CreateNewTravelView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Unesite informacije za novo putovanje:" FontSize="22" TextWrapping="Wrap" Margin="40"/>

        <StackPanel Grid.Column="1" Margin="20,40,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Naziv putovanja" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.Column="0"/>
                <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" FontSize="14" Name="TravelName"/>
                <Label Content="Kratak opis" FontWeight="Bold" FontSize="16" Grid.Row="1" Grid.Column="0"/>
                <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" FontSize="14" Name="TravelShortDescription"/>
                <Label Content="Detaljan opis" FontWeight="Bold" FontSize="16" Grid.Row="2" Grid.Column="0"/>
                <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" FontSize="14" Name="TravelLongDescription"/>
                <Label Content="Cena putovanja" FontWeight="Bold" FontSize="16" Grid.Row="3" Grid.Column="0"/>
                <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" FontSize="14" Name="TravelPrice"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
